<div class="text-center">
  <h2>{{postTitle}}</h2>
  <p>{{postContent}}</p>
  <p>Created by {{user.userName}} on {{format_date date_created}}</p>

  <p>
   
   {{#if comments.length}}
  <div class="col-md-6 ">
    <h3>Comments</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{comment.commentContent}}</h4>
        <p>{{comment.userName}}</p>
      </div>
      
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
{{#if logged_in}}
  <form class="form new-comment-form " post-id="{{id}}" user-id="{{user.userid}}">
      <div class="form-group">
        <label for="comment">Comment:</label>
        <input class="form-input" type="text" id="comment-content" />
      </div>
   
  
      <div class="form-group">
        <button type="submit" class="btn btn-primary" >Create</button>
      </div>
     
    </form> 
  {{else}}
  <button class="btn btn-primary loginRedirect" data-loggedin ={{logged_in}}><a href="/login">Comment</a></button>
  {{/if}}
  {{#if isCreator}}
   <div class="col-md-4">
        <button class="btn btn-sm btn-danger post-list" data-id="{{comment.id}}">DELETE</button>
      </div>
  {{/if}}

  

<script src="/js/comment.js"></script>